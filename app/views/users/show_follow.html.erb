<div class='container px- px-sm-0'>
  <div class='row'>
    <div class='col-md-12'>
      <h2>Follow Users</h2>
      <% if @user.follower.count > 0 %>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="4"></th>
          </tr>
        </thead>
        <tbody>
          <% @user.following_user.each do |user| %>
          <tr>
            <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
            <td><%= user.name %></td>
            <td>フォロー数:<%= user.follower.count %></td>
            <td>フォロワー数:<%= user.followed.count %></td>
            <td><%= link_to 'Show', user_path(user) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <% else %>
        <p>まだユーザーはいません</p>
      <% end %>
		</div>
	</div>
</div>